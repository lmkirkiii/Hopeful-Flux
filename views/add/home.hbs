<section class="form-container">
  <h4>Add your Own Flux!</h4>
  <form action="/add" method="post" class="flux-form">
    <p class="input-field">
      <textarea name="add[name]" cols="30" rows="10" placeholder="Name of Flux"></textarea>
    </p>
      <p class="input-field">
      <textarea name="add[content]" cols="30" rows="10" placeholder="Content of Flux"></textarea>
    </p>
    <p class="input-field">
      <input id="login-btn" type="submit" value="Add Flux" class="btn waves-effect waves-light">
    </p>
  </form>
</section>